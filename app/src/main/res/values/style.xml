<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tilStyle">
        <item name="layout_constraintWidth_percent">0.88</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxStrokeColor">@color/mintGreen</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="startIconTint">@color/mintGreen</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/mintGreen</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
=        <item name="endIconTint">@color/mintGreen</item>
    </style>

    <style name="ietStyle">
        <item name="maxLines">1</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="btnLoginStyle">
        <item name="backgroundTint">@color/mintGreen</item>
        <item name="layout_constraintWidth_percent">0.88</item>
        <item name="layout_constraintHeight_percent">0.08</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    // Doctor calls fragment styles
    <style name="card_view_style">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="tv_info_style">
        <item name="android:textColor">@color/dark_gray_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="btn_accept_busy_style">
        <item name="layout_constraintWidth_percent">0.36</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="iconGravity">textStart</item>
    </style>

</resources>