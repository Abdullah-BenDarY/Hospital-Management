<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="inputLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.88</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxStrokeColor">@color/mintGreen</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textColorHint">g</item>
        <item name="startIconTint">@color/mintGreen</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/mintGreen</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
=        <item name="endIconTint">@color/mintGreen</item>
    </style>

    <style name="input_edit_text_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">textPersonName</item>
        <item name="maxLines">1</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="btnMintGreen">
        <item name="backgroundTint">@color/mintGreen</item>
        <item name="layout_constraintWidth_percent">0.88</item>
        <item name="layout_constraintHeight_percent">0.08</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">10dp</item>
    </style>

</resources>